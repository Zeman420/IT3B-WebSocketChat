<Window x:Class="IT3B_Chat.Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IT3B_Chat.Server"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="DarkCyan">
        <Border Background="Aquamarine" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center" Height="43" VerticalAlignment="Top" Width="802"/>

        <Border Grid.Row="0"  BorderThickness="1" Margin="-12,10,-1,1" Padding="10">
            <StackPanel Margin="1,1,-10,-11">
                <TextBlock Text="Zprávy od klientů" FontWeight="Bold" Width="794"/>


            </StackPanel>
        </Border>
        <TextBlock TextWrapping="Wrap" Text="připojení uživatelé" Margin="627,21,0,394"/>
        <ListBox  Margin="628,49,7,81"/>
        <ListBox x:Name="MessagesListBox" Height="302" ScrollViewer.VerticalScrollBarVisibility="Auto" Margin="3,49,186,83"/>
        <Button x:Name="msgBtn" Content="Poslat zprávu" Margin="678,367,8,9" Click="msgBtn_Click"/>
        <TextBox x:Name="NewMessageTextBox" TextWrapping="Wrap" Text="" Margin="8,360,133,13"/>
        
    </Grid>
</Window>
