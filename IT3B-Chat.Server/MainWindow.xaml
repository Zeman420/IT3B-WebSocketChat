<Window x:Class="IT3B_Chat.Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IT3B_Chat.Server"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Zprávy od klientů" FontWeight="Bold" RenderTransformOrigin="0.491,8.684"/>
        <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="1" Margin="15,24,5,-4" Padding="10">
            <StackPanel>

                <ListBox x:Name="MessagesListBox" Height="200" Width="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
            </StackPanel>
        </Border>


        <Border BorderBrush="Gray" BorderThickness="1" Margin="15,24,5,-4" Padding="10">
            <StackPanel>
                <TextBlock Text="Události připojení/odpojení klientů" FontWeight="Bold"/>
                <ListBox x:Name="EventsListBox" Height="200" Width="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
